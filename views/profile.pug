extends layout

block content
  .container
    .page-header.text-center
      h1
        span.fa.fa-anchor
        |Profile Page
      a.btn.btn-default.btn-sm(href="/logout") Logout
    .row
      .col.s12.m8
        .card.blue-grey.darken-1
          .card-content.white-text
            span.card-title 
              i.ion-social-twitter.left
              |  Twitter
            p 
              strong Id
              = ': ' + user.twitter.id
            p 
              strong Token
              = ': ' + user.twitter.token
            p 
              strong Username
              = ': ' + user.twitter.username
            p 
              strong Display Name
              = ': ' + user.twitter.displayName
